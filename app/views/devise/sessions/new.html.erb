<div id="statusalerts" class="statusalerts">
  <% if notice %>
    <p class="notice success loginalert-box"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert error loginalert-box"><%= alert %></p>
  <% end %>
</div>

<div class="login">

  <div class="mainlogo"></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, placeholder: "e-mail", autofocus: true, autocomplete: "on"  %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "password", autocomplete: "off" %>
    </div>

 <!--   <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
-->
    <div class="forgotpassword">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "forgot password?", new_password_path(resource_name) %><br />
      <% end -%>
    </div>

    <div class="actions">
      <%= f.submit "LOGIN" %>
    </div>

    <div class="signup">
      not a markco user? create an account 
      <span class="signuplink">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "here", new_registration_path(resource_name) %><br />
        <% end -%>
      </span>
    </div>

    <script>
      setTimeout(fade_out, 5000);

       function fade_out() {
        $(".notice").fadeOut(2000, function() { 
          $(".notice").remove();
        });
        $(".alert").fadeOut(2000, function() { 
          $(".alert").remove();
        });
      }
    </script>


  <% end %>

</div>
