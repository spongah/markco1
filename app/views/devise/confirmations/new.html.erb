<%= render "devise/shared/alerts" %>

<div class="login">

  <%= link_to(new_session_path(resource_name)) do %>
    <div class="mainlogo"></div>
  <% end %>

	<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="field">
	    <%= f.email_field :email, placeholder: "enter e-mail address", autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %> 
	  </div>
	  <div class="forgotpassword">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "forgot password?", new_password_path(resource_name) %><br />
      <% end -%>
    </div>


	  <div class="actions">
	    <%= f.submit "Resend" %>
	  </div>
	<% end %>

</div>
